{
  "compilerOptions": {
    /* Diretórios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Módulos e alvo de compilação */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Tipagem e compatibilidade */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    /* Checagens e boas práticas */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,

    /* Mapas de código (para debug) */
    "sourceMap": true,

    /* Suporte a decoradores (caso venha usar) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
